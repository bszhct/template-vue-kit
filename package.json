{
  "name": "@bszhct/template-vue-kit",
  "version": "1.0.0",
  "description": "通用的 Vue 组件库模板",
  "scripts": {
    "lint": "vue-cli-service lint",
    "build:lib": "vue-cli-service build --target lib --name VueUikit --filename vue-uikit --dest lib src/index.js",
    "dev": "vuepress dev docs",
    "build": "vuepress build docs"
  },
  "main": "lib/vue-uikit.umd.min.js",
  "dependencies": {
    "ant-design-vue": "1.7.4",
    "core-js": "2.6.11",
    "highlight.js": "9.17.1",
    "vue": "2.6.11",
    "vue-highlight.js": "3.1.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "3.11.0",
    "@vue/cli-plugin-eslint": "3.11.0",
    "@vue/cli-plugin-router": "4.3.1",
    "@vue/cli-service": "3.11.0",
    "@vue/eslint-config-standard": "4.0.0",
    "@vuepress/plugin-back-to-top": "1.2.0",
    "@vuepress/plugin-medium-zoom": "1.2.0",
    "babel-eslint": "10.0.3",
    "eslint": "5.16.0",
    "eslint-plugin-vue": "5.0.0",
    "lint-staged": "9.5.0",
    "less": "3.9.0",
    "less-loader": "4.1.0",
    "vue-template-compiler": "2.6.11",
    "vuepress": "1.5.0",
    "vuepress-theme-antdocs": "1.1.1"
  },
  "resolutions": {
    "watchpack": "1.6.1",
    "vue-server-renderer": "2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "rules": {
      "no-unused-vars": "warn"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "src/*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "files": [
    "lib"
  ]
}
